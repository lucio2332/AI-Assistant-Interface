{
  "compilerOptions": {
    "target": "ES2022",                        // Slightly newer syntax (still safe)
    "module": "CommonJS",                      // Electron main process uses CommonJS
    "lib": ["ES2022", "DOM"],                  // Full access to Node + Browser APIs
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,                 // If you ever want to import .json files
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,                 // Helps catch missing return paths
    "noUnusedLocals": true,                    // Clean code, no unused vars
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
